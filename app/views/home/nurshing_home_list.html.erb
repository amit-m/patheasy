<div class="page-header">
  
  <h1>Nurshing Home List</h1>
</div>
<table class="table table-striped table-bordered" id="nurlist">
  <thead>
    <tr>
      <th>Nurshing Home Name</th>
      <th>Address</th>
      <th>Contact#</th>
    </tr>
  </thead>
  <tbody>
    <% @nurshing_home.each do |nur| %>
      <tr>   
        <td><%= nur.name %></td>
        <td><%= nur.address %></td>
        <td>

         <%nur.contact_no.split(',').each do |f|%>
           <%#if f[i].present?%>
             <%=f%><br>
           <%#end%>
         <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$(function() {    
    $('#nurlist').dataTable();
 
 
 
});


</script>

