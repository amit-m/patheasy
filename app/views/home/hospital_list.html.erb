<div class="page-header">
  
  <h1>Hospital List</h1>
</div>
<table class="table table-striped table-bordered" id="hoslist">
  <thead>
    <tr>
      <th>Hospital Name</th>
      <th>Address</th>
      <th>Contact#</th>
    </tr>
  </thead>
  <tbody>
    <% @hospitals.each do |hos| %>
      <tr>   
        <td><%= hos.name %></td>
        <td><%= hos.address %></td>
        <td>

         <%hos.contact_no.split(',').each do |f|%>
           <%#if f[i].present?%>
             <%=f%><br>
           <%#end%>
         <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$(function() {    
    $('#hoslist').dataTable();
 
 
 
});


</script>

