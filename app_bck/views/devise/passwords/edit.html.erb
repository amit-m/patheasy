<%#= render "devise/shared/links" %>
<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
			<fieldset>
				<h2>Change your password</h2>
				<hr class="colorgraph">
				<%= devise_error_messages! %>
				<div class="form-group">
					<%= f.hidden_field :reset_password_token %>                   
                    <%= f.password_field :password, :autofocus => true, :class=>"form-control input-sm", :placeholder=>"Password" %>
				</div>
				<div class="form-group">                  
                    <%= f.password_field :password_confirmation, :autofocus => true, :class=>"form-control input-sm", :placeholder=>"Confirm Password"%>
				</div>				
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
                        <%= f.submit "Change my password", :class=>"btn btn-lg btn-success btn-block" %>
					</div>
					
				</div>
			</fieldset>
		<%end%>
	</div>
</div>
