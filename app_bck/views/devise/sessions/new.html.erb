

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<fieldset>
				<h2>Please Sign In</h2>
				<hr class="colorgraph">
				<div class="form-group">
                    <%= f.text_field :user_id, :autofocus => true, :class=>"form-control input-sm", :placeholder=>"UserID"%>
				</div>
				<div class="form-group">                  
                    <%= f.password_field :password, :autofocus => true, :class=>"form-control input-sm", :placeholder=>"Password"%>
				</div>
				<% if devise_mapping.rememberable? -%>
					<!--<span class="button-checkbox">
						<button type="button" class="btn" data-color="info">Remember Me</button>
	                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">-->
	                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
						<a href="/admins/password/new" class="btn btn-link pull-right">Forgot Password?</a>
					</span>
				<%end%>
				<hr class="colorgraph">
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
                        <%= f.submit "Sign in", :class=>"btn btn-lg btn-success btn-block" %>
					</div>
				</div>
			</fieldset>
		<%end%>
	</div>
</div>
