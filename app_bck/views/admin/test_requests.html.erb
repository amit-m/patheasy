<div class="page-header">
  <h1>Advance Test Requests List</h1>
</div>
<table class="table table-striped table-bordered" id="testreqlist">
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Test Name</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @test_req.each do |t_req| %>
      <tr>   
        <td><%= t_req.name %></td>
        <td><%= t_req.gender %></td>
        <td><%= t_req.age %></td>
        <td><%= t_req.medical_test.name %></td>
        <td><a href="/admin/test_req_detail/<%=t_req.id%>.pdf" class="btn btn-primary" target="_blank">Pdf Preview</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$(function() {    
    $('#testreqlist').dataTable();
});
</script>

