.page-header{style: "text-align:center;"}
  %h1 Change Password
- @admin = current_admin
.col-md-6.col-xs-6.col-md-offset-3.col-xs-offset-3
  = form_for @admin, :url => admin_save_password_path, :html => { :method => :put, :class => "form-horizontal" } do |f|
    - if @admin.errors.any?
      .error_explanation
        %h2
          = pluralize(@admin.errors.count, "error") 
          prohibited this user to change password:
        %ul
          - for message in @admin.errors.full_messages
            %li= message
    .form-inner
      .form-group
        /%label.col-sm-2.control-label{for: "inputEmail3"} New Password
        .controls.col-sm-12
          = f.password_field :password, :autocomplete => "off",:required => true, :placeholder => "New Password", :class=>"form-control"
      .form-group
        /%label.col-sm-2.control-label{for: "inputPassword3"} Password Confirmation
        .controls.col-sm-12
          = f.password_field :password_confirmation,:required => true, :placeholder => "Confirm New Password", :class=>"form-control"
    = f.submit "Update" , :class=>"btn btn-primary"
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
             root_path, :class => 'btn btn-primary' 

  .push-100
.cb
