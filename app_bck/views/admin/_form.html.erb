<div class="row" >
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

 <% urls = @admin.new_record? ? admin_save_admin_path : admin_update_path(:id=>params[:id])  %>
	<%= form_for @admin,:url => urls, :html => { :class => 'form-horizontal' } do |f| %>
	  <% if @admin.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this zone from being saved:</h2>

	      <ul>
	      <% @admin.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <div class="row">
	  	<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">		    
		    <%= f.text_field :name, :class => 'form-control input-sm', :placeholder => "Name", :autofocus => true , :required => true%>
		  </div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">		    
		    <%= f.text_field :designation, :class => 'form-control input-sm', :placeholder => "Designation", :tabindex=>"1", :autofocus => true , :required => true, :style=> "margin-left:5px"%>
		  </div>
		</div>
	  </div>
	  <div class="form-group">	    
	    <%= f.text_area :residential_address, :placeholder => "Residential Address",:class => 'form-control', :tabindex=>"2", :autofocus => true , :required => true, :rows => 3%>
	  </div>
	  <div class="row">
	  	<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">	   
		    <%= f.text_field :emp_id, :class => 'form-control input-sm', :placeholder => "Employee ID",:autofocus => true , :required => true%>
		  </div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">	    
		    <%= f.text_field :doj, :class => 'form-control input-sm datepicker', :autofocus => true , :placeholder => "Date ofJoining",:required => true, :readonly => true,:style=> "margin-left:5px"%>
		  </div>	
		</div>
	</div>
		<div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6">
	       <div class="form-group">	    
		    <%= f.text_field :email, :class => 'form-control input-sm', :required => true , :placeholder => "Email"%>
		   
		  </div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">	    
		    <%= f.text_field :user_id, :class => 'form-control input-sm', :placeholder => "User ID", :required => true, :style=> "margin-left:5px" if @admin.new_record?%>
		    <%= f.text_field :user_id, :class => 'form-control input-sm', :placeholder => "User ID", :readonly => true, :style=> "margin-left:5px" unless @admin.new_record?%>
		  </div>
	  </div>
	</div>
	  <div class="row">
	  	<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">	    
		    <%= f.password_field :password, :placeholder=>"Password", :class => 'form-control input-sm', :required => true if @admin.new_record?%>
		    <%= f.password_field :password, :placeholder=>"Password", :class => 'form-control input-sm' unless @admin.new_record?%>
		  </div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
		  <div class="form-group">	    
		    <%= f.password_field :password_confirmation, :placeholder=>"Confirm Password", :class => 'form-control input-sm', :required => true, :style=> "margin-left:5px" if @admin.new_record?%>
		    <%= f.password_field :password_confirmation, :placeholder=>"Confirm Password", :class => 'form-control input-sm', :style=> "margin-left:5px" unless @admin.new_record?%>
		  </div>
		</div>
	  <div class="form-actions">
	    <%= f.submit "Save & Activate", :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		         admin_admin_lists_path, :class => 'btn btn-primary' %>
	  </div>
	<% end %>
</div>
</div>


<script type="text/javascript">
  $(document).ready(function(){  	
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
  });
</script>