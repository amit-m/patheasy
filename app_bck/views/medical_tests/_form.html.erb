<div class="row" >
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

<%= form_for @medical_test, :html => { :class => 'form-horizontal' } do |f| %>

<div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">        
       
      <%=f.select :category_id, Category.all.collect {|c| [ c.name, c.id ]}, {:include_blank => '- Select Category -'}, :class=>"form-control input-sm", :required => true %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">  
         <%= f.text_field :name, :class => 'form-control input-sm',:placeholder => "Test Name", :tabindex=>"1", :autofocus => true , :required => true, :style=> "margin-left:5px" %> 
      </div>
    </div>
</div>

 <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">        
       
    <%= f.number_field :duration_of_rpt,:placeholder => "Report Duration", :class => 'form-control input-sm'%>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <div class="form-group">  
         <%= f.text_field :cost_of_text, :class => 'form-control input-sm',:placeholder => "Cost Of Test", :tabindex=>"1", :autofocus => true , :required => true, :style=> "margin-left:5px" %> 
      </div>
    </div>
</div>

<div class="form-group">     
      <%= f.text_area :clinical_restrictn, :placeholder => "Clinical Restrication",:class => 'form-control', :tabindex=>"2", :autofocus => true , :required => true, :rows => 3%>
  </div>
 <div class="form-group">     
      <%= f.text_area :specimen_required, :placeholder => "Specimen Required",:class => 'form-control', :tabindex=>"2", :autofocus => true , :required => true, :rows => 3%>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                medical_tests_path, :class => 'btn' %>
  </div>
<% end %>
 </div>
</div>